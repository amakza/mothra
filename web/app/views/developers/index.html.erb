<h1>Developer MODE</h1>

<div id="main">
  <span><span class="sub-title">Project:</span> <%= @project.title %></span>
  <%= form_for @project, url: developers_path do |f| %>
    <%# @project.developer_answers.each do |developer_answer| %>
      <% f.fields_for :developer_answers, f.object.developer_answers.where(section_id: @section_id) do |answer| %>
        <div>
          <p><%= QualityPoint.find(answer.object.quality_point_id).question %></p>
          <div class="icon">
            <label>
              <%= f.radio_button :status, 1 %>
              <i class="far fa-check-circle"></i>
            </label>
            <label>
              <%= f.radio_button :status, 2 %>
              <i class="fas fa-user-check"></i>
            </label>
            <label>
              <%= f.radio_button :status, 3 %>
              <i class="far fa-times-circle"></i>
            </label>

            <span>
              <a href="#comment-modal" data-toggle="modal" data-target="#comment-modal">
                <i class="far fa-comment-dots"></i>
              </a>
            </span>
          </div>
        </div>
      <% end %>
    <%# end %>
  <% end %>
</div>

<div class="btn-area">
  <span class="pulse-save ok">SAVE</span>
  <a href="<%= root_path %>" class="button generic" style="float: right">Back</a>
</div>

<!-- The Modal -->
<div class="modal" id="comment-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Modal Heading</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <textarea rows="4">
        </textarea>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
