<!-- Write Comment Modal -->
<div class="modal" id="write-comment-modal" data-postpoint="<%= controller_name %>">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Write a comment</h4>
        <button type="button" class="close" data-dismiss="modal"><i class="far fa-times-circle"></i></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <textarea rows="8"></textarea>
        <input type="hidden" name="answer_comment_id" id="answer_comment_id">
      </div>
    </div>
  </div>
</div>

<!-- Read Comment Modal -->
<div class="modal" id="view-comment-modal" data-postpoint="<%= controller_name %>">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Comment</h4>
        <button type="button" class="close" data-dismiss="modal"><i class="far fa-times-circle"></i></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <p></p>
      </div>
    </div>
  </div>
</div>
